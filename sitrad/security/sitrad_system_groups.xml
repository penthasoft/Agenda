<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--The security for the gym_mgmt_system-->
    <record model="ir.module.category" id="module_sitrad_category">
            <field name="name">SITRAD</field>
            <field name="sequence">0</field>
            <field name="visible" eval="0" />
    </record>

    <record id="group_sitrad_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_sitrad_category"/>
    </record>

    <record id="group_sitrad_notificador" model="res.groups">
        <field name="name">Regsitrador</field>
        <field name="category_id" ref="module_sitrad_category"/>
    </record>

    <record id="base.user_admin" model="res.users">
        <field name="groups_id" eval="[(4, ref('group_sitrad_manager'))]"/>
    </record>

    <record id="base.user_root" model="res.users">
        <field name="groups_id" eval="[(4, ref('group_sitrad_manager'))]"/>
    </record>    
</odoo>
