        <record model="ir.ui.view" id="sitrad_agresores_view">
            <field name="name">Agresores</field>
            <field name="model">sitrad.agresores</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Agresores">
                    <sheet>
                        <group>
                            <field name="tipo_doc"/>
                            <field name="nro_doc"/>
                            <field name="name"/>
