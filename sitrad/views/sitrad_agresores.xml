<odoo>

    <!-- sexo -->
    <record model="ir.ui.view" id="sitrad_sexo_tree">
        <field name="name">Sexo</field>
        <field name="model">sitrad.sexo</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
