                            <!-- <field name="age_year"/>
                            <field name="age_month"/> -->
                            <field name="sex"/>
                            <field name="gen"/>
                            <field name="civil"/>
                            <field name="condicion"/>
                            <field name="hijos"/>
                            <field name="telefono"/>
                            <field name="date"/>
                            <field name="registra"/>                            
                            <field name="identificador"/>
                        </group>
                    </sheet>
              <!--       <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sitrad_agresores_tree">
            <field name="name">Lista de Agresores</field>
            <field name="model">sitrad.agresores</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string='Información del Agresor'>
                        <field name="identificador"/>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="tipo_doc"/>
                        <field name="nro_doc"/>
                        <field name="dob"/>
                        <field name="age"/>
                        <field name="sex"/>
                        <field name="gen"/>
                        <field name="civil"/>
                        <field name="condicion"/>
                        <field name="hijos"/>
                        <field name="telefono"/>
                </tree>
            </field>
        </record>

         <record id="view_agresores_filter" model="ir.ui.view">
            <field name="name">Búsqueda de Agresores</field>
            <field name="model">sitrad.agresores</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Agresor">
                    <field name="name"/>
                    <field name="sex"/>
                    <field name="gen"/>
                    <field name="condicion"/>
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Agresor" name="group_name" domain="[]" context="{'group_by':'name'}" />
                        <filter string="Condicion" name="group_condiciony" domain="[]" context="{'group_by':'condicion'}" />
                    </group>
                </search>
            </field>
        </record>

