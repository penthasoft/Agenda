<!-- DENUNCIAS -->
    <record model="ir.ui.view" id="sitrad_denuncias_view">
            <field name="name">Denuncias</field>
            <field name="model">sitrad.denuncias</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Denuncias">
                    <sheet>
                        <group>
                            <group string ="Expediente">
                                <field name="provincias" string ="Provincia"/>
                                <field name="provincia" invisible="1"/>
                                <field name="ctrlv_fec_den_hec"/>
                                <field name="ctrlv_fec_den"/>
                                <field name="ctrlv_fec_rempj"/>
                                <field name="pjf_juzgado"/>
                                <field name="pjf_exp"/>
                                <field name="comisarias" options="{'no_create': True, 'no_open': True}"/>
                                <field name="forma" string ="Tipo de Violencia" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                                <field name="grado"/>
                            </group>
                            <group string ="Autores">
                                <field name="victima" context="{'default_denuncia_id': id}">
                                    <form string="Victimas">
                                        <group>
                                            <field name="name"/>
                                        </group>
                                    </form>
                                    <tree string="Victimas" editable="bottom">
                                        <field name="name" invisible="1"/>
                                        <field name="victima"/>
                                        <field name="denuncia_id" invisible="1"/>
                                    </tree>
                                </field>

                                <field name="agresor" context="{'default_denuncia_id': id}">
                                    <form string="Agresores">
                                        <group>
                                            <field name="name"/>
                                            <field name="agresor"/>
                                            <field name="parentesco"/>
                                            <field name="denuncia_id"/>
                                        </group>
                                    </form>
                                    <tree string="Agresores" editable="bottom">
                                        <field name="name" invisible="1"/>
                                        <field name="agresor"/>
                                        <field name="parentesco"/>
                                        <field name="denuncia_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>

                            <group string ="Resolución">
                                <field name="ctrlpj_fec_den"/>
                                <field name="ctrlpj_fec_rempj"/>
                                <field name="ctrlmp_fec_den"/>
                                <field name="pjf_med_prot" string ="¿A lugar?"/>
                                <field name="url_medida"/>
                                <field name="pjf_btn_pnc"/>
                                <field name="pjf_acm"/>
                                <field name="pjf_acm_exp"/>
                                <field name="pjf_med_prot_apela"/>
                            </group>

                            <group string="Centros">
                                <group string="CEM">
                                    <field name="cem_name" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="cem_legal"/>
                                    <field name="cem_psicologica"/>
                                    <field name="cem_tsocial"/>
                                    <field name="cem_justif" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                                <group string="Centro de Salud">
                                    <field name="sld_centro" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="sld_rqr"/>
                                    <field name="sld_agrecs" string ="Oblg. Agresor?"/>
                                </group>
                            </group>
                        </group>
                    </sheet>
<!--                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>

