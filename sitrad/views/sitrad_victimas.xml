<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Victimas -->
        <record model="ir.ui.view" id="sitrad_victimas_view">
            <field name="name">Victimas</field>
            <field name="model">sitrad.victimas</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Victimas">
                    <sheet>
                        <group>
                            <field name="tipo_doc"/>
                            <field name="nro_doc"/>
                            <field name="name"/>
                            <field name="dob"/>
                            <field name="age"/>
                            <field name="age_year"/>
                            <field name="age_month"/>
                            <field name="sex"/>
                            <field name="gen"/>
                            <field name="civil"/>
                            <field name="condicion"/>
                            <field name="hijos"/>
                            <field name="telefono"/>
                            <field name="registra"/>
                            <field name="date"/>
                            <field name="identificador"/>
                        </group>
                    </sheet>
<!--                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sitrad_victimas_tree">
            <field name="name">Lista de Victimas</field>
            <field name="model">sitrad.victimas</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string='Información de la Victima'>
                        <field name="identificador"/>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="tipo_doc"/>
                        <field name="nro_doc"/>
                        <field name="dob"/>
                        <field name="age"/>
                        <field name="sex"/>
                        <field name="gen"/>
                        <field name="civil"/>
                        <field name="condicion"/>
                        <field name="hijos"/>
                        <field name="telefono"/>
                        <field name="distrito"/>
                        <field name="procedencia"/>
                </tree>
            </field>
        </record>

         <record id="view_medical_victimas_filter" model="ir.ui.view">
            <field name="name">Búsqueda de Victimas</field>
            <field name="model">sitrad.victimas</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Victimas">
                    <field name="name"/>
                    <field name="sex"/>
                    <field name="gen"/>
                    <field name="condicion"/>
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Victima" name="group_name" domain="[]" context="{'group_by':'name'}" />
                        <filter string="Condicion" name="group_condiciony" domain="[]" context="{'group_by':'condicion'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="sitrad_victimas_action_tree" model="ir.actions.act_window">
                <field name="name">Victimas</field>
                <field name="res_model">sitrad.victimas</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[]</field>
                <field name="context">{}</field>
                <field name="view_id" eval="False"/>
                <field name="help" type="html">
                  <p class="o_view_nocontent_smiling_face">
                    Haga clic para agregar un nuevo Victima.
                  </p><p>
                   Agregue todos los Victimas
                  </p>
                </field>
        </record>

        <menuitem action="sitrad_victimas_action_tree" id="sitrad_victimas_list" parent="sitrad_conf_actores" sequence="1"/>


        <!-- Victimas -->
        <record model="ir.ui.view" id="sitrad_den_victima_view">
            <field name="name">Registro Denuncias Victimas</field>
            <field name="model">sitrad.den_victima</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Victimas">
                    <sheet>
                        <group>
                            <field name="victima"/>
                            <field name="denuncia_id"/>
                        </group>
                    </sheet>
<!--                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sitrad_den_victima_tree">
            <field name="name">Lista de Victimas</field>
            <field name="model">sitrad.den_victima</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string='Información de la Victima'>
                        <field name="victima"/>
                        <field name="denuncia_id"/>
                </tree>
            </field>
        </record>

         <record id="view_medical_den_victima_filter" model="ir.ui.view">
            <field name="name">Búsqueda de Victimas</field>
            <field name="model">sitrad.den_victima</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Victimas">
                    <field name="victima"/>
                    <field name="denuncia_id"/>
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Victima" name="group_name" domain="[]" context="{'group_by':'name'}" />
                        <filter string="Denuncia" name="group_denuncia_id" domain="[]" context="{'group_by':'denuncia_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="sitrad_den_victima_action_tree" model="ir.actions.act_window">
                <field name="name">Victimas Denuncia</field>
                <field name="res_model">sitrad.den_victima</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[]</field>
                <field name="context">{}</field>
                <field name="view_id" eval="False"/>
                <field name="help" type="html">
                  <p class="o_view_nocontent_smiling_face">
                    Haga clic para agregar un nuevo Victima.
                  </p><p>
                   Agregue todos los Victimas
                  </p>
                </field>
        </record>

        <menuitem action="sitrad_den_victima_action_tree" id="sitrad_den_victima_list" parent="sitrad_conf_actores" sequence="10"/>

</odoo>
