<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_action_dashboard" model="ir.actions.client">
            <field name="name">Seguimiento</field>
            <field name="tag">project_dashboard</field>
        </record>

        <menuitem id="menu_project_dashboard"
                  name="Seguimiento"
                  action="project_action_dashboard"
                  parent="sitrad.sitrad_conf_reportes"
                  sequence="1"/>
        
        <record id="sitrad_report_action" model="ir.actions.client">
            <field name="name">Reporte 1 - Denuncias</field>
            <field name="tag">sitrad_report</field>
        </record>

        <!-- Elemento de menú para la nueva página -->
        <menuitem id="menu_sitrad_report"
                  name="Reporte 1 - Denuncias"
                  action="sitrad_report_action"
                  parent="sitrad.sitrad_conf_reportes"
                  sequence="2"/>


        <record id="sitrad_reportcem_action" model="ir.actions.client">
            <field name="name">Reporte 2 - CEM Y CS</field>
            <field name="tag">sitrad_reportcem</field>
        </record>

        <!-- Elemento de menú para la nueva página -->
        <menuitem id="menu_sitrad_reportcem"
                  name="Reporte 2 - CEM Y CS"
                  action="sitrad_reportcem_action"
                  parent="sitrad.sitrad_conf_reportes"
                  sequence="3"/>


        <record id="sitrad_reportvic_action" model="ir.actions.client">
            <field name="name">Reporte 3 - Víctimas</field>
            <field name="tag">sitrad_reportvic</field>
        </record>

        <!-- Elemento de menú para la nueva página -->
        <menuitem id="menu_sitrad_reportvic"
                  name="Reporte 3 - Víctimas"
                  action="sitrad_reportvic_action"
                  parent="sitrad.sitrad_conf_reportes"
                  sequence="4"/>

        <record id="sitrad_reportagre_action" model="ir.actions.client">
            <field name="name">Reporte 4 - Agresores</field>
            <field name="tag">sitrad_reportagre</field>
        </record>

        <!-- Elemento de menú para la nueva página -->
        <menuitem id="menu_sitrad_reportagre"
                  name="Reporte 4 - Agresores"
                  action="sitrad_reportagre_action"
                  parent="sitrad.sitrad_conf_reportes"
                  sequence="4"/>

        <template id="assets_dashboard" name="Sitrad assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
                <link rel="stylesheet" href="/sitrad/static/src/css/dashboard.css"/>
                <script type="text/javascript" src="/sitrad/static/src/js/dashboard.js"></script>
                <script type="text/javascript" src="/sitrad/static/src/js/SitradReport.js"></script>
                <script type="text/javascript" src="/sitrad/static/src/js/SitradReportCem.js"></script>
                <script type="text/javascript" src="/sitrad/static/src/js/SitradReportVic.js"></script>
                <script type="text/javascript" src="/sitrad/static/src/js/SitradReportAgre.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/chart.js@3.0.0/dist/chart.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
                <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
                <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
                <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAhYWVml_4c9iOpsFUlKbyFQvcXEIUpq9Q&amp;libraries=places&amp;libraries=geometry&amp;loading=async"></script>
            </xpath>
        </template>
    </data>
</odoo>