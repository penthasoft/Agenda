<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sitrad_apirest_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.registra.lang})"/>
            <div class="page" style="font-size: 14px !important; margin: 0 0 0 0;padding: 0 0 0 0;">
                <div class="row mt0 mb0">
                    <div t-if="o.name" class="col-12 bm-0">
                        <center>
                            <strong>
                                <h5>DATOS DE NOTIFICACION</h5>
                                <h6><span t-field="o.name"/></h6>
                            </strong>
                        </center>
                    </div>
                </div>
                <br></br>
                <div class="row mt0 mb0">
                    <div t-if="o.date" class="col-4 bm-0">
                        <strong>Fecha y Hora Ingreso:</strong>
                        <p class="m-0" t-field="o.date"/>
                    </div>
                    <div t-if="o.cedula" class="col-4 bm-0">
                        <strong>Cedula Nro.:</strong>
                        <p class="m-0" t-field="o.cedula"/>
                    </div>
                    <div t-if="o.expediente" class="col-4 bm-0">
                        <strong>Expediente:</strong>
                        <p class="m-0" t-field="o.expediente"/>
                    </div>
                </div>

                <div class="row mt0 mb0">
                    <div class="col-6">
                        <div class="text-center mb-3">
                            <br/>
                            <br/>
                            <strong>Frontis de Dirección legal</strong>
                        </div>
                        <div class="text-center mb-3">
                            <img t-if="o.image_casa" t-att-src="image_data_uri(o.image_casa)" style="max-width: 200px;" alt="casa"/>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center mb-3">
                            <br/>
                            <br/>
                            <strong>Constancia</strong>
                        </div>
                        <div class="text-center mb-3">
                            <img t-if="o.image_const" t-att-src="image_data_uri(o.image_const)" style="max-width: 200px;" alt="constancia"/>
                        </div>
                    </div>
                </div>
                <div class="row mt0 mb0">
                    <div class="col-12">
                        <div class="text-center mb-3">
                            <br/>
                            <br/>
                            <strong>Mapa de Geolocalización</strong>
                        </div>
                        <div class="text-center mb-3">
                            <img t-if="o.map_image" t-att-src="image_data_uri(o.map_image)" style="max-width: 450px; border: 2px solid black;" alt="geo"/>
                        </div>
                    </div>
                </div>

            </div>
        </t>
    </template>

    <template id="report_sitrad_apirest">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="sitrad.report_sitrad_apirest_document" t-lang="o.registra.lang"/>
            </t>
        </t>
    </template>
</odoo>
